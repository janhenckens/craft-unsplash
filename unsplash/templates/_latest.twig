{% extends '_layouts/cp' %}
{% set title = "Latest - Splashing Images"|t %}
{% set tabs = {
    popular: { label: "Popular"|t, url: url('unsplash')},
    latest: { label: "Last Added"|t, url: url('unsplash/latest') },
    random: { label: "Random"|t, url: url('unsplash/random')},
} %}
{% if lastSearch is defined %}
    {% set searchTab = {
    lastSearch: { label: "Last search: "|t ~ lastSearch.q, url: url('unsplash/search?q=' ~ lastSearch.q)},
    } %}
    {% set tabs = tabs|merge(searchTab) %}
{% endif %}
{% set selectedTab = 'latest' %}

{% set extraPageHeaderHtml %}
{% include 'unsplash/components/_searchForm' %}
{% endset %}

{% set content %}
    {% include 'unsplash/components/_images' %}
{% endset %}

